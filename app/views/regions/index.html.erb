<div class="panel-default">
  <div class="panel-heading">
    <b>Listing regions</b>
  </div>

  <div class="table-responsive">
    <table class="table table-condensed table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        <% @regions.each do |region| %>
          <tr>
            <td><%= region.name %></td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to 'Edit', edit_region_path(region), class: 'btn btn-default' %>
                <%= link_to 'Destroy', region, method: :delete,
                  data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<%= link_to 'New Region', new_region_path, class: 'btn btn-sm btn-primary' %>