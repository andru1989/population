<%= simple_form_for(@region, defaults: {error: false}) do |f| %>

  <div class="panel-body">
    <%= render "shared/error_message", model: @region %>

    <div class="row">
      <div class="col-sm-4 btn-lg-3">
        <%= f.input :name %>
      </div>
    </div>

  </div>

  <div class="panel-footer">
    <div class="btn-group btn-group-sm">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to 'Back', regions_path, class: 'btn btn-default' %>
    </div>
  </div>

<% end %>