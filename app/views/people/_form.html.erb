<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :last_name %>
    <%= f.input :identification_type %>
    <%= f.input :identification %>
    <%= f.input :address %>
    <%= f.input :gender %>
    <%= f.input :phone %>
    <%= f.association :city %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
