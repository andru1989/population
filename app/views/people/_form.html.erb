<%= simple_form_for(@person, defaults: {error: false}) do |f| %>

  <div class="panel-body">
    <%= render "shared/error_message", model: @person %>

    <div class="row">
      <div class="col-sm-4 btn-lg-3">
        <%= f.input :identification_type, collection: @person.select_identification_types %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.input :identification %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.input :name %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.input :last_name %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.input :gender, collection: @person.select_genders %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.input :phone %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.input :address %>
      </div>

      <div class="col-sm-4 btn-lg-3">
        <%= f.association :city, label_method: :city_region %>
      </div>
    </div>

  </div>

  <div class="panel-footer">
    <div class="btn-group btn-group-sm">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= link_to 'Back', people_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
